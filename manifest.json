{
  "manifest_version": 2,
  "name": "Gmail Keep Refresh Button",
  "description": "Keeps the refresh button around when mail is selected.",
  "version": "0.0.1",

  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "logo-128.png"
  }
}
